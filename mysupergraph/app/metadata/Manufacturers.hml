---
kind: ObjectType
version: v1
definition:
  name: Manufacturers
  fields:
    - name: id
      type: Uuid!
    - name: name
      type: Text!
  graphql:
    typeName: Manufacturers
    inputTypeName: ManufacturersInput
  dataConnectorTypeMapping:
    - dataConnectorName: my_connector
      dataConnectorObjectType: manufacturers

---
kind: TypePermissions
version: v1
definition:
  typeName: Manufacturers
  permissions:
    - role: admin
      output:
        allowedFields:
          - id
          - name

---
kind: BooleanExpressionType
version: v1
definition:
  name: ManufacturersBoolExp
  operand:
    object:
      type: Manufacturers
      comparableFields:
        - fieldName: id
          booleanExpressionType: UuidBoolExp
        - fieldName: name
          booleanExpressionType: TextBoolExp
      comparableRelationships:
        - relationshipName: products
  logicalOperators:
    enable: true
  isNull:
    enable: true
  graphql:
    typeName: ManufacturersBoolExp

---
kind: AggregateExpression
version: v1
definition:
  name: ManufacturersAggExp
  operand:
    object:
      aggregatedType: Manufacturers
      aggregatableFields:
        - fieldName: id
          aggregateExpression: UuidAggExp
        - fieldName: name
          aggregateExpression: TextAggExp
  count:
    enable: true
  graphql:
    selectTypeName: ManufacturersAggExp

---
kind: OrderByExpression
version: v1
definition:
  name: ManufacturersOrderByExp
  operand:
    object:
      orderedType: Manufacturers
      orderableFields:
        - fieldName: id
          orderByExpression: UuidOrderByExp
        - fieldName: name
          orderByExpression: TextOrderByExp
      orderableRelationships: []
  graphql:
    expressionTypeName: ManufacturersOrderByExp

---
kind: Model
version: v2
definition:
  name: Manufacturers
  objectType: Manufacturers
  source:
    dataConnectorName: my_connector
    collection: manufacturers
  filterExpressionType: ManufacturersBoolExp
  aggregateExpression: ManufacturersAggExp
  orderByExpression: ManufacturersOrderByExp
  graphql:
    selectMany:
      queryRootField: manufacturers
      subscription:
        rootField: manufacturers
    selectUniques:
      - queryRootField: manufacturersById
        uniqueIdentifier:
          - id
        subscription:
          rootField: manufacturersById
    filterInputTypeName: ManufacturersFilterInput
    aggregate:
      queryRootField: manufacturersAggregate
      subscription:
        rootField: manufacturersAggregate

---
kind: ModelPermissions
version: v1
definition:
  modelName: Manufacturers
  permissions:
    - role: admin
      select:
        filter: null
        allowSubscriptions: true

---
kind: Relationship
version: v1
definition:
  name: products
  sourceType: Manufacturers
  target:
    model:
      name: Products
      relationshipType: Array
      aggregate:
        aggregateExpression: ProductsAggExp
  mapping:
    - source:
        fieldPath:
          - fieldName: id
      target:
        modelField:
          - fieldName: manufacturerId
  graphql:
    aggregateFieldName: productsAggregate

